{
  "name": "actions-shell-scripts",
  "displayName": "GitHub Actions Shell Scripts",
  "description": "A VS Code extension designed for GitHub Actions users to analyze and execute shell scripts within YAML files. Highlight issues with ShellCheck diagnostics, run scripts directly from the editor, and streamline your CI pipeline development. Perfect for debugging and optimizing workflow files.",
  "icon": "images/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "files": [
    "images",
    "html"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Debuggers",
    "Other"
  ],
  "publisher": "marcovr",
  "keywords": [
    "yaml",
    "github",
    "actions",
    "shellcheck",
    "scripts",
    "ci/cd",
    "bash",
    "debugging"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcovr/actions-shell-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/marcovr/actions-shell-scripts/issues"
  },
  "homepage": "https://github.com/marcovr/actions-shell-scripts",
  "galleryBanner": {
    "color": "#ff8400",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:yml",
    "onLanguage:github-actions-workflow"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.yaml.shell-injection",
        "path": "./syntaxes/yaml-with-script-injection.json",
        "injectTo": [
          "source.yaml"
        ],
        "embeddedLanguages": {
          "meta.embedded.inline.shell": "shellscript"
        }
      },
      {
        "scopeName": "source.github-actions-workflow.shell-injection",
        "path": "./syntaxes/gh-action-with-script-injection.json",
        "injectTo": [
          "source.github-actions-workflow"
        ],
        "embeddedLanguages": {
          "meta.embedded.inline.shell": "shellscript"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "actions-shell-scripts.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "style"
          ],
          "default": "warning",
          "description": "Choose one of the options to set the shellcheck severity."
        },
        "actions-shell-scripts.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the extension"
        },
        "actions-shell-scripts.runButtonEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable '▶️ Run Script' CodeLens button"
        },
        "actions-shell-scripts.baseScript": {
          "type": "string",
          "default": "",
          "description": "This additional script is getting sourced before executing the script from the yaml. Useful for mocking variables, defining functions and preparing the script."
        },
        "actions-shell-scripts.shellcheckFolder": {
          "type": "string",
          "default": "",
          "description": "This is the path to the folder that includes 'shellcheck', e.g. ('/opt/homebrew/bin' will lead to '/opt/homebrew/bin/shellcheck --version')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm install && rm -rf out && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "rm -rf out && npx tsc -p ./ && vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "prettier": "^3.4.2",
    "prettier-plugin-sh": "^0.14.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "yaml": "^2.6.1"
  }
}
